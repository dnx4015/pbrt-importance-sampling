# make -f Makefile_pdflatex

R = document
STY = *.cls
FIG = images/curveApproximation.pdf 
#images/piecewise.pdf images/results.pdf images/resultsImages.pdf

pdf: $(R).pdf

$(R).bbl: $(R).bib
	pdflatex $(R)
	bibtex $(R)
	pdflatex $(R)

$(R).pdf: *.tex $(STY) $(FIG) $(R).bbl
	pdflatex $(R)

clean:
	rm -f $(R).log $(R).aux $(R).bbl $(R).blg $(R).out
